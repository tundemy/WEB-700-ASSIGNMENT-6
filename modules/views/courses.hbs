<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses<a href="/courses/add" class="btn btn-success float-right">Add New Course</a></h2>
        <hr />
        
        <p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each courses}}
                        <tr>
                            {{#courseIdLink courseId}}{{courseCode}}{{/courseIdLink}}                            
                            {{#courseLink courseId}}{{courseDescription}}{{/courseLink}}
                            {{#removeCourse courseId}}remove{{/removeCourse}}                            
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </p>

    </div>
    {{#unless courses}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>